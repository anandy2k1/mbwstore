<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <mdllookbook translate="label" module="mdllookbook">
            <label>Look-book Settings</label>
            <tab>Mdlext</tab>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>               
            <groups>
                <general translate="label">
                    <label>Look-Book Setting</label>
                    <sort_order>601</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>                    
                        <mdllookbookenabled translate="label">
                            <label>Enable/Disable Look Book</label>                            
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>48</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mdllookbookenabled>               
                        <logotitle translate="label">
                            <label>Look Book Title</label>                            
                            <frontend_type>text</frontend_type>                                                                
                            <comment>
                <![CDATA[This input will be visible on the frontend the default title is "Look Book".]]>
                            </comment>
                            <sort_order>49</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logotitle> 
						<mdllookbookresizeenabled translate="label">
                            <label>Thumb Resizing</label>                            
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mdllookbookresizeenabled> 
                        
                        <logoheight translate="label">
                            <label>Thumb Height</label>                            
                            <frontend_type>text</frontend_type>                            
                            <comment>
                <![CDATA[Depends on this value your thumb will be resized and visible on frontend .]]>
                            </comment>
                            <sort_order>51</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logoheight>               
                        <logowidth translate="label">
                            <label>Thumb Width</label>                            
                            <frontend_type>text</frontend_type>                            
                            <comment>
                <![CDATA[Depends on this value your thumb will be resized and visible on frontend.]]>
                            </comment>
                            <sort_order>52</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logowidth>                 
                        
                      
                                                                       
                    </fields>
                </general>                    
            </groups>
        </mdllookbook>       
    </sections>
</config>