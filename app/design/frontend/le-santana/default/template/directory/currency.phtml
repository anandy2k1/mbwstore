/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>

<div class="currency_box">
<div class="currency_pan"><?php echo $this->__('Currency: ');?><span><?php echo $this->getCurrentCurrencyCode()?></span><i class="icon-angle-down"></i></div>
  <div class="currency_detail" style="display:none;">
    <?php foreach ($this->getCurrencies() as $_code => $_name): ?>
    <a title="<?php echo $_name ?>" class="currency_icon  <?php if($_code==$this->getCurrentCurrencyCode()): ?> selected<?php endif; ?>" href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>"><?php echo Mage::app()->getLocale()->currency($_code)->getSymbol()?> <span>- <?php echo $_name ?></span></a>
    <?php endforeach; ?>
  </div>
</div>
<?php endif; ?>
<script type="text/javascript">
	jQuery(function() {
		jQuery(".currency_box").hover(function() {
			jQuery(this).addClass('active');
			jQuery(".currency_detail").stop(true, true).slideDown(200, "easeInSine");
			},  
			function() {
			jQuery(this).removeClass('active');
			jQuery(".currency_detail").stop(true, true).fadeOut(200, "easeInSine");
			});

	});
</script>
