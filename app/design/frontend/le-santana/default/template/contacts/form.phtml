jQuery(document).ready(function(){	   
		 jQuery.fn.myTopBar = function() {
		 var contactBox = jQuery('.contactBox');
		if (jQuery(window).width() > 1200){
		jQuery(".viewMap").css("display", "block");
		jQuery(".viewMap").text("<?php echo $this->__('View map');?>" );
		contactBox.addClass('fixedContact');	
		jQuery(".viewMap").click(function(){
			if(contactBox.hasClass('fixedContact')){
				contactBox.removeClass('fixedContact');
				jQuery(".viewMap").text("<?php echo $this->__('Hide map');?>" );
			}else{
				contactBox.addClass('fixedContact');
				jQuery(".viewMap").text("<?php echo $this->__('View map');?>" );
			}
		});
		}else{
			contactBox.removeClass('fixedContact');
			jQuery(".viewMap").css("display", "none");
		}
		 }
	});
	jQuery(document).ready(function(){
		jQuery.fn.myTopBar();
	});

jQuery(window).resize(function(){
    jQuery.fn.myTopBar();
});
