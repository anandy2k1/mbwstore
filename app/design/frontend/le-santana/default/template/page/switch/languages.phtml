<?php
/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<?php if(count($this->getStores())>1): ?>
<div class="language-switcher">
	<div class="language_detail">
    <?php foreach ($this->getStores() as $_lang): ?>
    <?php $_selected = ($_lang->getId() == $this->getCurrentStoreId()) ? ' class="selected"' : '' ?>
        <a href="<?php echo $_lang->getCurrentUrl() ?>"<?php echo $_selected ?>>
      <img src="<?php echo $this->getSkinUrl('images/flag/flag_' . $this->htmlEscape($_lang->getName()) . '.png') ?>" 
alt="<?php echo $this->htmlEscape($_lang->getName()) ?>"/>
<span><?php echo $this->htmlEscape($_lang->getName()) ?></span>
	</a>

 <?php if($_lang->getId() == $this->getCurrentStoreId()){
  $current=$this->htmlEscape($_lang->getName());
 	} ?>
    <?php endforeach; ?>
    </div>
<div class="select_lang">
    <img src="<?php echo $this->getSkinUrl('images/flag/flag_' . $current . '.png') ?>" alt="<?php echo $this->htmlEscape($_lang->getName()) ?>"/>
    <span><?php echo $current; ?></span><i class="icon-angle-down"></i>
</div>
</div>
 <?php endif; ?>
 
 <script type="text/javascript">
	jQuery(function() {
		jQuery(".language-switcher").hover(function() {
			jQuery('.select_lang').addClass('active');
			jQuery(".language_detail").stop(true, true).slideDown(200, "easeInSine");
			},  
			function() {
			jQuery('.select_lang').removeClass('active');
			jQuery(".language_detail").stop(true, true).fadeOut(100, "easeInCubic");
			});

	});
</script>